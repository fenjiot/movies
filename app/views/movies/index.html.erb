<h1>Movies</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Year</th>
      <th>IMDB Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= movie.imdbrating %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div>
<h3>Import a CSV File</h3>
  <%= form_tag import_movies_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
